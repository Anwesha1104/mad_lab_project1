<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <EditText
            android:id="@+id/pickupField"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Pickup Location"
            android:inputType="textCapWords"
            android:background="@drawable/edittext_bg"
            android:padding="12dp"
            android:layout_marginBottom="12dp"/>

        <EditText
            android:id="@+id/dropField"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Drop-off Location"
            android:inputType="textCapWords"
            android:background="@drawable/edittext_bg"
            android:padding="12dp"
            android:layout_marginBottom="20dp"/>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginBottom="24dp"
            android:elevation="4dp"
            android:radius="12dp">

            <ImageView
                android:id="@+id/mockMap"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/mock_map"
                android:scaleType="centerCrop"
                android:clickable="true"
                android:focusable="true" />

        </androidx.cardview.widget.CardView>

        <Button
            android:id="@+id/viewAvailableRidesButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="View Available Rides"
            android:layout_marginBottom="12dp"
            android:backgroundTint="@color/teal_700"
            android:textColor="@android:color/white"
            android:padding="12dp"/>

        <Button
            android:id="@+id/viewRidesButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="View My Rides"
            android:backgroundTint="@color/teal_200"
            android:textColor="@android:color/white"
            android:padding="12dp"/>

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/movingCar"
            android:layout_width="300dp"
            android:layout_height="300dp"
            app:lottie_fileName="moving_car.json"
            app:lottie_autoPlay="true"
            app:lottie_loop="true" />

    </LinearLayout>
</ScrollView>

